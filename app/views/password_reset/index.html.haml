%section.forgot_password.container
  .row
    .span10.offset1
      = form_tag password_reset_path, method: 'post' do
        %header
          %h1 Forgot Password?
          %p We will send you an email with a link that you can use to reset your password.
        %fieldset
          = label_tag :email_address
          = email_field_tag :email_address
        %fieldset.action
          = submit_tag "Send Email", class: "btn"