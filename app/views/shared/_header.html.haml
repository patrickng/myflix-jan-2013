%section#top-header.row
  %h1.span2
    = link_to "MyFLiX"
  %ul.span4.clearfix
    %li= link_to "Videos", videos_path
    %li= link_to "My Queue"
    %li= link_to "People"
  / %form.span5.for-search(action="")
  /   %input.search-query(type="text" placeholder="Search for videos here")
  /   %button.btn(type="submit") Search
  = form_tag search_videos_path, method: 'post', class: 'span5 for-search' do
    = text_field_tag :search, nil, class: 'search-query', placeholder: 'Search for videos'
    = button_tag "Search", name: nil, class: 'btn'
  #user_links.pull-right
    %ul
      %li.dropdown
        %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
          Welcome, Philip J. Fry
          %b.caret
        %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
          %li
            %a(href="#") Account
            %a(href="#") Plan and Billing
            %a(href="#") Sign Out
