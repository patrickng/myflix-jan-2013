%article.video
  .container
    .row
      .video_large_cover.span7.offset1
        = image_tag(@video.large_cover_url)
      .video_info.span3
        %h3= @video.title
        %span 
          %strong=raw "Average Rating: #{@average_rating}"
        %p= @video.description
        .actions
          %a.btn.btn-primary(href="") Watch Now
          %a.btn(href="") + My Queue

%section.reviews.container
  .row
    .span10.offset1
      %form
        %fieldset
          %label Rate this video
          %select(name="")
            %option(value="5") 5 Stars
            %option(value="4") 4 Stars
            %option(value="3") 3 Stars
            %option(value="2") 2 Stars
            %option(value="1") 1 Star
          %label Write Review
          %textarea.span6(name="" rows="6")
        %fieldset.actions.clearfix
          %input(type="submit" value="Submit" class="btn")
          %a(href="") Cancel
      %header
        %h3=raw "User Reviews (#{@video.reviews.count})"
      %ul
        - @reviews.each do |review|
          %article.review
            %li.row
              .span2
                %span 
                  = review.rating
                  \/
                  = review.max_rating
                %p 
                  by 
                  = link_to review.user.full_name
              .span8
                %p
                  = review.review
