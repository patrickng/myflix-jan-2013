%section.admin_add_video
  .container
    .row
      .span10.offset1
        = bootstrap_form_for @video, html: { class: 'form-horizontal' } do |f|
          %ul.nav.nav-tabs
            %li
              %a(href="/ui/admin_views_payments") Recent Payments
            %li.active
              = link_to "Add a New Video", new_admin_video_path
          %fieldset
            = f.text_field :title
            = f.collection_select :id, Category.all, :id, :name, label: "Category"
            = f.text_area :description, rows: 8, class: 'span6'
            = f.file_field :large_cover_img, label: "Large Cover"
            = f.file_field :small_cover_img, label: "Small Cover"

          %fieldset.actions.control-group
            .controls
              = f.secondary 'Add Video'
