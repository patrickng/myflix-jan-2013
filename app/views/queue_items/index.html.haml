%section.my_queue.container
  .row
    .span10.offset1
      %article
        %header
          %h2 My Queue
        %table.table
          %thead
            %tr
              %th(width="10%") List Order
              %th(width="30%") Video Title
              %th(width="10%") Play
              %th(width="20%") Rating
              %th(width="15%") Genre
              %th(width="15%") Remove
          %tbody
            - @queue.each do |item|
              %tr
                %td
                  %input(type="text" value="1")
                %td
                  = link_to item.video.title, item.video
                %td
                  = button_to "Play", nil, class: "btn"
                %td
                  = form_for([item.video, item.video.reviews.new], html: { class: 'form-vertical' }) do |f|
                    = f.select :rating, options_for_select(5.downto(1).map { |n| [n.to_s + " Stars", n]} ), {}, { onChange: 'this.form.submit();' }
                %td
                  - item.video.categories.each do |category|
                    = link_to category.name, category_path(category)
                %td
                  = link_to "", method: :post do
                    %i.icon-remove
        = button_to "Update Instant Queue", nil, class: "btn"
