%section.sign_in.container
  .row
    .span10.offset1
      = form_tag login_path, class: 'sign_in' do
        %header
          %h1 Sign in
        %fieldset
          = label_tag 'email_address', "Email Address:"
          = text_field_tag :email_address
          = label_tag 'password', "Password:"
          = password_field_tag :password
        %fieldset.action
          = submit_tag "Sign in", class: 'btn'
          = link_to "Forgot your password?", password_reset_path, class_name: "password_reset"

        / %form.sign_in
        /   %header
        /     %h1 Sign in
        /   %fieldset
        /     %label Email Address
        /     %input(type="email")
        /     %label Password
        /     %input(type="password")
        /   %fieldset.action
        /     %input(type="submit" value="Sign in" class="btn")
